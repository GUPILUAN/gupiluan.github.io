---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import "../styles/global.css";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  id="container"
  class="h-full font-sans flex flex-col items-center justify-center"
>
  <img
    id="background"
    src={background.src}
    alt=""
    fetchpriority="high"
    class="fixed top-0 left-0 w-full h-full -z-10 blur-[100px]"
  />
  <main class="h-full flex justify-center">
    <section id="hero" class="flex flex-col items-start justify-center p-4">
      <a href="https://astro.build">
        <img src={astroLogo.src} width="115" height="48" alt="Astro Homepage" />
      </a>
      <h1 class="text-lg mt-1">{t("temporal.message")}</h1>
      <section id="links" class="flex gap-4">
        <a
          class="button text-white bg-gradient-to-r from-blue-600 to-purple-500 shadow-inner rounded-lg px-4 py-2 transition hover:text-gray-300 hover:shadow-none"
          href="https://github.com/GUPILUAN"
        >
          {t("temporal.button")}
        </a>
      </section>
    </section>
  </main>

  <a
    href="https://astro.build/blog/astro-5/"
    id="news"
    class="box absolute bottom-4 right-4 max-w-xs p-4 bg-white/90 rounded-2xl border border-white backdrop-blur-lg transition hover:bg-white/60 hidden md:block"
  >
    <svg width="32" height="32" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path
        d="M24.667 12c1.333 1.414 2 3.192 2 5.334 0 4.62-4.934 5.7-7.334 12C18.444 28.567 18 27.456 18 26c0-4.642 6.667-7.053 6.667-14Zm-5.334-5.333c1.6 1.65 2.4 3.43 2.4 5.333 0 6.602-8.06 7.59-6.4 17.334C13.111 27.787 12 25.564 12 22.666c0-4.434 7.333-8 7.333-16Zm-6-5.333C15.111 3.555 16 5.556 16 7.333c0 8.333-11.333 10.962-5.333 22-3.488-.774-6-4-6-8 0-8.667 8.666-10 8.666-20Z"
        fill="#111827"></path>
    </svg>
    <h2 class="text-xl font-normal text-gray-900 mb-4">
      {t("temporal.news.title")}
    </h2>
    <p class="text-gray-600 text-base leading-6">
      {t("temporal.news.description")}
    </p>
  </a>
</div>
