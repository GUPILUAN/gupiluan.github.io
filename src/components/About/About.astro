---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

import SocialIcons from "@components/SocialIcons.astro";
import Title from "@components/atoms/Title.astro";
import "./about.css";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id={t("header.about")} class="about">
  <div class="about__container">
    <img class="about__img" src="../img/me.jpg" alt="Foto de perfil" />

    <div class="about__content">
      <Title margin="1rem" contenido={t("header.about")} />
      <p class="about__text">{t("about.description")}</p>
      <SocialIcons width="25" height="25" />
    </div>
  </div>
</section>
