---
import terminal from './terminal.module.css';
import { myInfo } from '../../../../i18n/ui';
---

<div class={terminal.terminal}>
	<div class={terminal.header}>
		<div class={terminal.close}>✕</div>
		<div class={terminal.minimize}>—</div>
		<div class={terminal.maximize}>⇿</div>
	</div>
	<div class={terminal.body}>
		<div class={terminal.user__line}>
			<span class={terminal.user__name}
				>{myInfo.name.toLowerCase().substring(0, 4)}@root:
			</span>
			<span class={terminal.separator}>~</span>$ . printskills
		</div>
		<div class="content">
			<slot />
		</div>
	</div>
</div>
