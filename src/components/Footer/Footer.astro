---
import Logo from "../Logo.astro";
import SocialIcons from "../SocialIcons.astro";
import "./Footer.css";
import { myInfo } from "../../i18n/ui";
---

<footer>
  <div class="footer__container">
    <Logo />
    <SocialIcons width="23" height="23" />
  </div>

  <aside class="footer__links">
    <ul>
      <li>
        <a class="footer__link" href={`mailto:${myInfo.email}`}
          ><span
            ><iconify-icon
              icon="fluent:mail-28-regular"
              width="27"
              height="27"
              style="color: #dcd8fc"></iconify-icon></span
          >{myInfo.email}</a
        >
      </li>
      <li>
        <a
          class="footer__link"
          href={myInfo.github}
          target="_blank"
          rel="nofollow noreferrer noopener"
          ><span
            ><iconify-icon
              icon="mdi:github"
              width="27"
              height="27"
              style="color: #dcd8fc"></iconify-icon></span
          >{myInfo.gh_username}</a
        >
      </li>
    </ul>
  </aside>
</footer>
